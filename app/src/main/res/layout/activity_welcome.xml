<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="devinstech.space.ticatytac.Welcome"
    android:background="@drawable/notebook">

    <EditText
        android:id="@+id/playerTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:hint="Player 2's Name"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toRightOf="@+id/playerTwoName"
        app:layout_constraintTop_toTopOf="@+id/playerTwoName" />

    <EditText
        android:id="@+id/playerOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:hint="Player 1's Name"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toRightOf="@+id/playerOneName"
        app:layout_constraintTop_toTopOf="@+id/playerOneName" />

    <ImageView
        android:id="@+id/playerOneName"
        android:layout_width="61dp"
        android:layout_height="41dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="193dp"
        android:entries="@drawable/blueo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/redx" />

    <ImageView
        android:id="@+id/playerTwoName"
        android:layout_width="61dp"
        android:layout_height="41dp"
        app:srcCompat="@drawable/blueo"
        android:layout_marginTop="57dp"
        app:layout_constraintTop_toBottomOf="@+id/playerOneName"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="122dp"
        android:layout_marginTop="32dp"
        android:onClick="procrastinate"
        android:text="Procrastinate!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerTwo" />
</android.support.constraint.ConstraintLayout>
